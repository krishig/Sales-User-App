<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/_12sdp"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/icBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/_15sdp"
        android:src="@drawable/ic_back" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/houseNumberInputLayout"
        style="@style/TextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:hint="@string/house_number"
        android:includeFontPadding="false"
        android:lineSpacingExtra="0dp"
        app:endIconCheckable="true"
        app:endIconMode="clear_text"
        app:errorEnabled="false"
        app:errorIconDrawable="@null">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/houseNumberTextInputEditText"
            style="@style/TextInputEditText"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:includeFontPadding="false"
            android:inputType="number"
            android:lineSpacingExtra="0dp"
            android:maxLines="1"
            android:singleLine="true"
            android:textAppearance="@style/MediumFont12"
            android:textColor="@color/colorHeadingTextView" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/streetNameInputLayout"
        style="@style/TextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:hint="@string/street_name"
        android:includeFontPadding="false"
        android:lineSpacingExtra="0dp"
        app:endIconCheckable="true"
        app:endIconMode="clear_text"
        app:errorEnabled="false"
        app:errorIconDrawable="@null">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/streetNameTextInputEditText"
            style="@style/TextInputEditText"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:includeFontPadding="false"
            android:inputType="textPersonName"
            android:lineSpacingExtra="0dp"
            android:maxLines="1"
            android:singleLine="true"
            android:textAppearance="@style/MediumFont12"
            android:textColor="@color/colorHeadingTextView" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/villageNameInputLayout"
        style="@style/TextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:hint="@string/village_name"
        android:includeFontPadding="false"
        android:lineSpacingExtra="0dp"
        app:endIconCheckable="true"
        app:endIconMode="clear_text"
        app:errorEnabled="false"
        app:errorIconDrawable="@null">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/villageNameTextInputEditText"
            style="@style/TextInputEditText"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:includeFontPadding="false"
            android:inputType="textPersonName"
            android:lineSpacingExtra="0dp"
            android:maxLines="1"
            android:singleLine="true"
            android:textAppearance="@style/MediumFont12"
            android:textColor="@color/colorHeadingTextView" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/pinCodeInputLayout"
        style="@style/TextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:hint="@string/pin_code"
        android:includeFontPadding="false"
        android:lineSpacingExtra="0dp"
        app:endIconCheckable="true"
        app:endIconMode="clear_text"
        app:errorEnabled="false"
        app:errorIconDrawable="@null">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/pinCodeTextInputEditText"
            style="@style/TextInputEditText"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:includeFontPadding="false"
            android:inputType="number"
            android:maxLength="6"
            android:lineSpacingExtra="0dp"
            android:maxLines="1"
            android:singleLine="true"
            android:textAppearance="@style/MediumFont12"
            android:textColor="@color/colorHeadingTextView" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/districtInputLayout"
        style="@style/TextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:hint="@string/district"
        android:includeFontPadding="false"
        android:lineSpacingExtra="0dp"
        app:endIconCheckable="true"
        app:endIconMode="clear_text"
        app:errorEnabled="false"
        app:errorIconDrawable="@null">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/districtTextInputEditText"
            style="@style/TextInputEditText"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:includeFontPadding="false"
            android:inputType="textPersonName"
            android:lineSpacingExtra="0dp"
            android:maxLines="1"
            android:singleLine="true"
            android:textAppearance="@style/MediumFont12"
            android:textColor="@color/colorHeadingTextView" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/stateInputLayout"
        style="@style/TextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:hint="@string/state"
        android:includeFontPadding="false"
        android:lineSpacingExtra="0dp"
        app:endIconCheckable="true"
        app:endIconMode="clear_text"
        app:errorEnabled="false"
        app:errorIconDrawable="@null">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/stateTextInputEditText"
            style="@style/TextInputEditText"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:includeFontPadding="false"
            android:inputType="textPersonName"
            android:lineSpacingExtra="0dp"
            android:maxLines="1"
            android:singleLine="true"
            android:textAppearance="@style/MediumFont12"
            android:textColor="@color/colorHeadingTextView" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/submitButton"
        style="@style/UnElevatedFilledButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:text="@string/submit"
        android:textAppearance="@style/MediumFont18" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>