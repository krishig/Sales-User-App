<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/imageMaterialCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_12sdp"
        app:cardBackgroundColor="@color/customer_card_color"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="0dp"
        app:contentPadding="@dimen/_12sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/profileImageView"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"
                android:src="@drawable/user_placeholder" />

            <LinearLayout
                android:id="@+id/relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_toStartOf="@+id/icEditImageView"
                android:layout_toEndOf="@+id/profileImageView"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:letterSpacing="0"
                    android:text="230"
                    android:textAppearance="@style/BoldFont15"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/orderIdTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:letterSpacing="0"
                    android:text="@string/good_morning"
                    android:textAppearance="@style/BoldFont12"
                    android:textColor="@color/login_grey" />


            </LinearLayout>

            <ImageView
                android:id="@+id/icEditImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:padding="@dimen/_3sdp"
                android:src="@drawable/ic_sub_cat_edit"
                app:tint="@color/black" />
        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>
</LinearLayout>