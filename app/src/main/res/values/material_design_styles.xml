<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- TextInputLayout Style -->
    <style name="TextInputLayout" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <!-- box border -->
        <item name="boxStrokeColor">@color/outlined_box_text_input_layout_border</item>
        <item name="boxStrokeWidth">@dimen/_1sdp</item>
        <item name="boxBackgroundColor">@color/boxBackgroundColor</item>

        <!-- hint color -->
        <item name="hintTextColor">@color/colorActiveHint</item> <!-- active hint color -->
        <item name="android:textColorHint">@color/colorActiveHint
        </item> <!-- inactive hint color -->

        <!-- hint message text size -->
        <item name="hintTextAppearance">@style/MediumFont12</item>

        <!-- error color -->
        <item name="boxStrokeErrorColor">@color/colorError</item> <!-- box border color -->
        <item name="errorTextColor">@color/colorError</item> <!-- error message color -->
        <item name="errorEnabled">true</item> <!-- error message color -->
        <item name="errorIconTint">@color/colorError</item> <!-- error icon color -->

        <!-- error message font and text size -->
        <item name="errorTextAppearance">@style/MediumFont10</item>

        <!-- text counter color -->
        <item name="counterTextColor">@color/colorPrimary</item>
        <!-- counter text font and text size -->
        <item name="counterTextAppearance">@style/MediumFont10</item>

        <!-- text counter color after more then maximum-->
        <item name="counterOverflowTextColor">@color/colorOnPrimary
        </item> <!-- error message color -->
        <!-- counter more then maximum text font and text size -->
        <item name="counterOverflowTextAppearance">@style/MediumFont10</item>

        <item name="endIconTint">@color/colorEndIconTint</item>

        <item name="colorControlNormal">@color/colorEndIconTint</item>
        <item name="colorControlActivated">@color/colorEndIconTint</item>
    </style>

    <style name="InputField" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <!-- box border -->
        <item name="boxStrokeColor">@color/boxStrokeColorInner</item>
        <item name="boxStrokeWidth">@dimen/_1sdp</item>
        <item name="boxBackgroundColor">@color/boxBackgroundColorInner</item>

        <!-- hint color -->
        <item name="hintTextColor">@color/colorActiveHint</item> <!-- active hint color -->
        <item name="android:textColorHint">@color/colorInactiveHint
        </item> <!-- inactive hint color -->

        <!-- hint message text size -->
        <item name="hintTextAppearance">@style/MediumFont12</item>

        <!-- error color -->
        <item name="boxStrokeErrorColor">@color/colorError</item> <!-- box border color -->
        <item name="errorTextColor">@color/colorError</item> <!-- error message color -->
        <item name="errorEnabled">true</item> <!-- error message color -->
        <item name="errorIconTint">@color/colorError</item> <!-- error icon color -->

        <!-- error message font and text size -->
        <item name="errorTextAppearance">@style/MediumFont10</item>

        <!-- text counter color -->
        <item name="counterTextColor">@color/colorPrimary</item>
        <!-- counter text font and text size -->
        <item name="counterTextAppearance">@style/MediumFont10</item>

        <!-- text counter color after more then maximum-->
        <item name="counterOverflowTextColor">@color/colorAccent</item> <!-- error message color -->
        <!-- counter more then maximum text font and text size -->
        <item name="counterOverflowTextAppearance">@style/MediumFont10</item>
    </style>


    <!-- TextInputEditText Style -->
    <style name="TextInputEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/MediumFont12</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textColorHint">@color/colorHint</item>
        <item name="android:textCursorDrawable">@drawable/cursor_drawable</item>
    </style>

    <!-- Empty Button Style-->
    <style name="UnElevatedEmptyButton" parent="@style/Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="rippleColor">@color/colorEmptyButtonPressed</item>
        <item name="backgroundTint">@color/colorEmptyButtonUnPressed</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <!-- Filled Button Style-->
    <style name="UnElevatedFilledButton" parent="@style/Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="rippleColor">@color/colorFilledButtonPressed</item>
        <item name="backgroundTint">@color/colorFilledButtonUnPressed</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">@dimen/_6sdp</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <!-- Button Style -->
    <style name="UnElevatedButton" parent="@style/Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="rippleColor">@color/colorButtonPressed</item>
        <item name="backgroundTint">@color/colorButtonUnPressed</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <!-- Guest Login Button Style-->
    <style name="UnElevatedGuestLoginButton" parent="@style/Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="rippleColor">@color/colorGuestLoginButtonPressed</item>
        <item name="backgroundTint">@color/colorGuestLoginButtonUnPressed</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>
    <style name="FullScreenDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorOnPrimary</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="actionMenuTextColor">@color/colorOnPrimary</item>
    </style>

    <!-- Drop Down Edit Text Style -->
    <style name="DropDownInputField" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

        <!-- box border -->
        <item name="boxStrokeColor">@color/outlined_box_text_input_layout_border</item>
        <item name="boxStrokeWidth">@dimen/_1sdp</item>
        <item name="boxBackgroundColor">@color/boxBackgroundColor</item>

        <!-- hint color -->
        <item name="hintTextColor">@color/colorActiveHint</item> <!-- active hint color -->
        <item name="android:textColorHint">@color/colorInactiveHint
        </item> <!-- inactive hint color -->

        <!-- error color -->
        <item name="boxStrokeErrorColor">@color/colorError</item> <!-- box border color -->
        <item name="errorTextColor">@color/colorError</item> <!-- error message color -->
        <item name="errorEnabled">true</item> <!-- error message color -->
        <item name="errorIconTint">@color/colorError</item> <!-- error icon color -->

        <item name="endIconTint">@color/colorEndIconTint</item>
    </style>

    <!-- Bottom Navigation Drawer Styles -->
    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textAppearance">@style/BoldFont2</item>
        <item name="android:fontFamily">@font/regular</item>
    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textAppearance">@style/RegularFont2</item>
        <item name="android:fontFamily">@font/regular</item>
    </style>

    <style name="TextNavigation" parent="Widget.Design.NavigationView">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:fontFamily">@font/medium</item>
    </style>

    <style name="BottomNavigationViewStyle" parent="Widget.Design.BottomNavigationView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginEnd">0dp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingExtra">0dp</item>
        <item name="itemBackground">@null</item>
        <item name="itemTextColor">@color/bottom_navigation_item_selector</item>
        <item name="itemIconTint">@color/bottom_navigation_item_selector</item>
        <item name="itemTextAppearanceActive">@style/BottomNavigationView.Active</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavigationView</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="itemIconSize">20dp</item>
    </style>

    <!-- Yes, Confirm Button colors -->
    <style name="UnElevatedYesConfirmButton" parent="@style/Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="rippleColor">@color/colorYesConfirmButtonPressed</item>
        <item name="backgroundTint">@color/colorYesConfirmButtonUnPressed</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <!-- No, Rewrite Button colors -->
    <style name="UnElevatedNoRewriteButton" parent="@style/Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="rippleColor">@color/colorNoRewriteButtonPressed</item>
        <item name="backgroundTint">@color/colorNoRewriteButtonUnPressed</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="SmallRoundedButton_Red" parent="@style/Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="rippleColor">@color/colorRedButton_Pressed</item>
        <item name="backgroundTint">@color/colorRedButton_UnPressed</item>
        <item name="android:textColor">@color/colorRedButton_Text</item>
        <item name="android:textAppearance">@style/MediumFont12</item>
        <item name="shapeAppearance">@style/cornerSmallRounded_Button</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingExtra">0dp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <!-- =========================================Button======================================== -->
    <style name="cornerSmallRounded_Button" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_5sdp</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@drawable/curve_otp_background</item>
    </style>


    <style name="Theme.NavigationDrawerApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.NavigationDrawerApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- ===================================Left Navigation Drawer==================================== -->
    <style name="LeftNavigationView.ItemTextAppearanceInactive" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:fontFamily">@font/medium</item>
    </style>

    <style name="LeftNavigationViewStyle" parent="Widget.Design.NavigationView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/curve_navigation_drawer_background</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingExtra">0dp</item>
        <item name="itemTextColor">@color/left_navigation_view_item_text_selector</item>
        <item name="itemTextAppearanceActive">@style/LeftNavigationView.ItemTextAppearanceActive</item>
        <item name="itemTextAppearanceInactive">@style/LeftNavigationView.ItemTextAppearanceInactive</item>
        <item name="android:textSize">16sp</item>
        <item name="iconSize">20dp</item>
        <item name="itemTextAppearance">@style/LeftNavigationView.ItemTextAppearanceActive</item>
        <item name="titleTextColor">@color/black</item>
        <item name="android:paddingTop">@dimen/_10sdp</item>


    </style>

    <style name="LeftNavigationView.ItemTextAppearanceActive" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:fontFamily">@font/medium</item>
    </style>

    <style name="NavigationView"  parent="Base.Theme.AppCompat">
        <item name="android:listDivider">@color/white</item>
    </style>

    <style name="MyDialogThemePhoneNumber" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@drawable/curve_phone_number</item>
    </style>
</resources>